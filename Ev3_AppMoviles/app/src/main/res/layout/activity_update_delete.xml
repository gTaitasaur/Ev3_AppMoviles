<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".UpdateDelete">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/siete">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/top_banner"
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:scaleType="centerCrop"
                android:src="@drawable/inacapbanner"
                android:visibility="visible"/>


            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="#C12622"></androidx.appcompat.widget.Toolbar>

            <TextView
                android:id="@+id/titulo_lab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:shadowColor="#000000"
                android:shadowDx="3"
                android:shadowDy="1"
                android:shadowRadius="3"
                android:text="Laboratorios Área TI"
                android:textAllCaps="false"
                android:textColor="#7a7a7a"
                android:textSize="34sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/titulo_sub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:shadowColor="#000000"
                android:shadowDx="3"
                android:shadowDy="1"
                android:shadowRadius="3"
                android:text="EDITAR INCIDENTES"
                android:textColor="#7a7a7a"
                android:textSize="20sp"
                android:textStyle="bold"/>


            <LinearLayout
                android:id="@+id/container_gris"
                android:layout_width="match_parent"
                android:layout_height="281dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:background="#CCEFEFEF"
                android:orientation="vertical"
                android:padding="6dp">


                <TextView
                    android:id="@+id/nombre_descripcion"
                    android:layout_width="match_parent"
                    android:layout_height="41dp"
                    android:text="Descripcion"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/etdescripcion"
                    android:layout_width="match_parent"
                    android:layout_height="181dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:background="#fff"
                    android:hint="Descripcion del incidente" />


            </LinearLayout>

            <Button
                android:id="@+id/button_volver"
                style="@style/Widget.Material3.Button.IconButton.Filled"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:backgroundTint="#C1001F"
                android:text="Volver"
                android:textColorHighlight="#FFFFFF"
                android:textColorLink="#FFFFFF"
                android:textSize="20sp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>